<mvc:View
    controllerName="flightui5as.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns="sap.uxap">

        <ObjectPageLayout id="ObjectPageLayout"
                    showTitleInHeaderContent="true"
					alwaysShowContentHeader="false"
					preserveHeaderStateOnScroll="false"
					headerContentPinnable="true"
					isChildPage="true"
					upperCaseAnchorBar="false">
				<headerTitle>
					<ObjectPageDynamicHeaderTitle id="_IDGenObjectPageDynamicHeaderTitle1">
						<expandedHeading>
							<m:Title id="_IDGenTitle2" text="{FlDetailModel>/Carrname}" wrapping="true" class="sapUiSmallMarginEnd"/>
						</expandedHeading>

                        <snappedHeading>
							<m:FlexBox id="_IDGenFlexBox" wrap="Wrap" fitContainer="true" alignItems="Center">
								<m:FlexBox id="_IDGenFlexBox1" wrap="NoWrap" fitContainer="true" alignItems="Center" class="sapUiTinyMarginEnd">
									<m:Title id="_IDGenTitle3" text="{FlDetailModel>/Carrname}" wrapping="true" class="sapUiTinyMarginEnd"/>
								</m:FlexBox>
							</m:FlexBox>
						</snappedHeading>

                        <navigationActions>
							<m:OverflowToolbarButton id="_IDGenOverflowToolbarButton" type="Transparent" icon="sap-icon://full-screen" press="handleFullScreen" tooltip="Enter Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"/>
							<m:OverflowToolbarButton id="_IDGenOverflowToolbarButton1" type="Transparent" icon="sap-icon://exit-full-screen" press="handleExitFullScreen" tooltip="Exit Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"/>
							<m:OverflowToolbarButton id="_IDGenOverflowToolbarButton2" type="Transparent" icon="sap-icon://decline" press="handleClose"  tooltip="Close column" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
						</navigationActions>

					</ObjectPageDynamicHeaderTitle>
				</headerTitle>

                <headerContent>
					<m:FlexBox id="_IDGenFlexBox2" wrap="Wrap" fitContainer="true" alignItems="Stretch">
						<m:Avatar id="_IDGenAvatar1" 
                        src="{path: 'FlDetailModel>/Carrid', formatter: '.formatter.getLogo'}"
								  displaySize="L"
								  displayShape="Square"
								  class="sapUiTinyMarginEnd">
						</m:Avatar>
						<m:VBox id="_IDGenVBox" justifyContent="Center" class="sapUiSmallMarginEnd">
							<m:Label id="_IDGenLabel" text="Airline ID"/>
							<m:Text id="_IDGenText6" text="{FlDetailModel>/Carrid}"/>
						</m:VBox>
						<m:VBox id="_IDGenVBox1" justifyContent="Center" class="sapUiSmallMarginEnd">
							<m:Label id="_IDGenLabel1" text="URL"/>
							<m:Text id="_IDGenText31" text="{parts:['FlDetailModel>/Url', 'FlDetailModel>Carrname'], formatter: '.formatter.urlFormatter'}"/>
							<!-- <Text id="_IDGenText5" 
					text="{parts: ['flightDataModel>Url', 'flightDataModel>Carrname'], 
					formatter: '.formatter.urlFormatter'}" /> -->
						</m:VBox>
						<m:VBox id="_IDGenVBox2" justifyContent="Center" class="sapUiSmallMarginEnd">
							<m:Label id="_IDGenLabel2" text="Currency"/>
							<m:ObjectNumber id="_IDGenObjectNumber" number="{FlDetailModel>/Currcode}" emphasized="false"/>
						</m:VBox>
					</m:FlexBox>
				</headerContent>


            <sections>
                <ObjectPageSection id="IDGenObjectPageSection" title="Flight Details Information">
                <subSections>
                    <ObjectPageSubSection id="IDGenObjectPageSubSection">
                        <blocks>
                            <m:Table id="IDGenTable"
                               items="{ 
                                   path: 'FlDetailModel>/to_FlightDetailAS/results'
                                }">
            <m:headerToolbar>
			  <m:OverflowToolbar id="_IDGenOverflowToolbar1" >
				<m:Title id="_IDGenTitle1"  text="{i18n>detailTitle}" level="H2"/>
				<m:ToolbarSpacer id="_IDGenToolbarSpacer1" />
			</m:OverflowToolbar>
		</m:headerToolbar>
        <m:columns>
              <m:Column id="_IDGenColumn4" >
                <m:Text id="_IDText9" text="{i18n>Connid}" />
              </m:Column>
              <m:Column id="_IDGenColumn5" >
                <m:Text id="_IDText10" text="{i18n>Fldate}" />
              </m:Column>
              <m:Column id="_IDGenColumn6" >
                <m:Text id="_IDText11" text="{i18n>Price}" />
              </m:Column>
              <m:Column id="_IDGenColumn7" >
                <m:Text id="_IDText12" text="{i18n>Currency}" />
              </m:Column>
              <m:Column id="_IDGenColumn8" >
                <m:Text id="_IDText13" text="{i18n>PlaneType}" />
              </m:Column>
              <m:Column id="_IDGenColumn9" >
                <m:Text id="_IDText14" text="{i18n>SeatsMax}" />
              </m:Column>
              <m:Column id="_IDGenColumn10" >
                <m:Text id="_IDText15" text="{i18n>SeatsOcc}" />
              </m:Column>
              <m:Column id="_IDGenColumn11" >
                <m:Text id="_IDText16" text="{i18n>SeatsmaxB}" />
              </m:Column>
              <m:Column id="_IDGenColumn12" >
                <m:Text id="_IDText17" text="{i18n>SeatsoccB}" />
              </m:Column>
              <m:Column id="_IDGenColumn13" >
                <m:Text id="_IDText18" text="{i18n>SeatsmaxF}" />
              </m:Column>
              <m:Column id="_IDGenColumn14" >
                <m:Text id="_IDText19" text="{i18n>SeatsoccF}" />
              </m:Column>
        </m:columns>

        <m:items>
           <m:ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle" highlight="{= ${FlDetailModel>SeatsOcc} > 180 ? 'Success' : 'Error'}">
             <m:cells>
               <m:Text id="_IDGenText20" text="{FlDetailModel>Connid}" wrapping="false" />
					<m:Text id="_IDGenText90"  text="{path: 'FlDetailModel>Fldate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'MM/dd/yyyy' }}" wrapping="false"/>
					<m:Text id="_IDGenText22"  text="{FlDetailModel>Price}" />
					<m:Text id="_IDGenText23"  text="{FlDetailModel>Currency}" />
					<m:Text id="_IDGenText24"  text="{FlDetailModel>PlaneType}" />
					<m:Text id="_IDGenText25"  text="{FlDetailModel>SeatsMax}" />
					<m:Text id="_IDGenText26"  text="{FlDetailModel>SeatsOcc}" />
					<m:Text id="_IDGenText27"  text="{FlDetailModel>PaymentSum}" />
					<m:Text id="_IDGenText28"  text="{FlDetailModel>SeatsmaxB}" />
					<m:Text id="_IDGenText29"  text="{FlDetailModel>SeatsoccB}" />
					<m:Text id="_IDGenText30"  text="{FlDetailModel>SeatsmaxF}" />
					<m:Text id="_IDGenText32"  text="{FlDetailModel>SeatsoccF}" />
				</m:cells>
			</m:ColumnListItem>
		</m:items>
	</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>




</mvc:View>

