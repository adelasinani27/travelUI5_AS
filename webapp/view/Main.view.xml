<mvc:View controllerName="flightui5as.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    <Table id="_IDGenTable"
		items="{
			path: 'flightDataModel>/',
			sorter: {
			path: 'Carrname'
			}
		}">
		<headerToolbar>
		   <OverflowToolbar id="_IDGenOverflowToolbar">
		       <Title id="IDGenTitle" text="{Products}" level="H2"/>
			   <ToolbarSpacer id="_IDGenToolbarSpacer"/>
			   <!-- <Button id="_IDGenButton" text="Open Dialog" press="onOpenPressed"/> -->
			    <Button id="_IDGenButton1" text="Create Airline" press="onAddNewRecord"/>
			   </OverflowToolbar>
   
		</headerToolbar>

		<columns>
			<Column id="_IDGenColumn">
				<Text id="_IDGenText" text="{i18n>Carrid}" />
			</Column>
			<Column id="_IDGenColumn1">
				<Text id="_IDGenText1" text="{i18n>Carrname}" />
			</Column>
			<Column id="_IDGenColumn3">
				<Text id="_IDGenText33" text="{i18n>Currcode}" />
			</Column>
			<Column id="_IDGenColumn2">
				<Text id="_IDGenText2" text="{i18n>Url}" />
			</Column>

		</columns>
		<items>
			<ColumnListItem id="_IDGenColumnListItem" vAlign="Middle" type="Navigation" press="onListPress">
				<cells>
					<Text id="_IDGenText3" text="{flightDataModel>Carrid}" wrapping="false" />
					<Text id="_IDGenText4" text="{flightDataModel>Carrname}" wrapping="false"/>
					<Text id="_IDGenText7" text="{flightDataModel>Currcode}" />
					<Text id="_IDGenText5" 
					text="{parts: ['flightDataModel>Url', 'flightDataModel>Carrname'], formatter: '.formatter.urlFormatter'}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
    </Page>
</mvc:View>